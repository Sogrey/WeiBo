<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/lyt_root_toolsBar_default"
              android:layout_width="match_parent"
              android:layout_height="@dimen/nav_height"
              android:background="@drawable/navigation_background"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/nav_height"
        android:layout_height="@dimen/nav_height"
        android:gravity="center_vertical"
        android:padding="@dimen/dip_10">

        <ImageView
            android:id="@+id/img_toolsbar_defaulkt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/nav_toolsbar_back_selector"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_toolsbar_defaulkt_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dip_10"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/txt_toolsbar_defualt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_12"
            android:layout_marginRight="@dimen/dip_12"
            android:gravity="left"
            android:text="标题"
            android:textColor="@color/black"
            android:textSize="@dimen/frontsize_normal"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_toolsbar_opera"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/dip_10">
        <!--在这里添加功能按钮-->
    </LinearLayout>
</LinearLayout>